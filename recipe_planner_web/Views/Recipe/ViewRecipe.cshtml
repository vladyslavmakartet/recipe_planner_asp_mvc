@model recipe_planner_web.Models.Recipe

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var RecipeToView = Convert.ToInt32(ViewData["RecipeToView"]);
    var RecipesList = ViewData["RecipesList"] as List<Recipe>;
}
<div class="container">
    <h1>Details</h1>
    <hr />
    <div class="form-group">
        <label class="control-label">Name</label>
        @{
            if (!String.IsNullOrEmpty(RecipesList[RecipeToView].recipe_name))
            {
                <input name="Name" class="form-control" placeholder="Recipe's name" value="@RecipesList[RecipeToView].recipe_name" readonly />
            }
        }
        <br />
    </div>
    <div class="form-group">
        <label class="control-label">Description</label>
        @{
            if (!String.IsNullOrEmpty(RecipesList[RecipeToView].recipe_description))
            {
                <textarea id="myTextArea" name="Description" class="form-control" placeholder="Recipe's description" readonly>@RecipesList[RecipeToView].recipe_description</textarea>
            }
        }
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col" class="text-center">#</th>
                <th scope="col" class="text-center">Name</th>
                <th scope="col" class="text-center">Quantity</th>
                <th scope="col" class="text-center">Unit</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (RecipesList[RecipeToView].ingredientsList.Count != 0)
                {
                    for (int i = 0; i < RecipesList[RecipeToView].ingredientsList.Count; i++)
                    {
                        <tr class="text-center">
                            <th class="text-center" scope="row">@(i+1)</th>
                            <td>@RecipesList[RecipeToView].ingredientsList[i].Name</td>
                            <td>@RecipesList[RecipeToView].ingredientsList[i].Quantity</td>
                            <td>@RecipesList[RecipeToView].ingredientsList[i].Unit</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
